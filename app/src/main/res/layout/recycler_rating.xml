<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="10.0"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10.0dp">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10.0dp"
        android:layout_marginTop="4.0dp"
        android:text="info"
        android:id="@+id/rating_name"
        android:textColor="#ff222222"
        android:textStyle="bold"
        android:textSize="30.0sp"/>

</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/evaluation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dp"
                android:layout_marginEnd="10.0dp"
                android:text="info"
                android:textColor="#ff222222"
                android:textSize="20.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="evaluationevaluationevaluationevaluationevaluatioionevaluationevaluationevaluativalluatativalluatativalluatativalluation" />

        </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="info"
        android:id="@+id/performance_name"
        android:textColor="#ff222222"
        android:textStyle="bold"
        android:textSize="20.0sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="performance"
        android:id="@+id/rating_performance"
        android:textColor="#ffffd700"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="info"
        android:id="@+id/priceper_name"
        android:textColor="#ff222222"
        android:textStyle="bold"
        android:textSize="20.0sp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="priceper"
        android:id="@+id/rating_priceper"
        android:textColor="#ffffd700"/>

</LinearLayout>

        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
        >
            <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="info"
        android:id="@+id/management_name"
        android:textColor="#ff222222"
        android:textStyle="bold"
        android:textSize="20.0sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="management"
        android:id="@+id/rating_management"
        android:textColor="#ffffd700"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>